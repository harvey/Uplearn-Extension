{
  "manifest_version": 3,
  "name": "Uplearn Custom Speed",
  "version": "7.1",
  "description": "Saves your custom speed changes on Uplearn.",
  
  "icons": {
    "512": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.uplearn.co.uk/learn/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab", "storage"
  ]
}
